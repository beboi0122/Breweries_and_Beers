<%- include('header', {pagetitle: 'Breweries & Beers - Brewery'}) -%>
<%- include('navbar') -%>
<div class="row justify-content-center">
    <div class="col-auto">
        <table style="text-align: center; vertical-align: middle;" class="table table-borderless">
            <tbody >
            <tr>
                <th scope="row"><h1><%=brew.name%></h1></th>
            </tr>
            <tr>
                <th scope="row"><%=brew.est%></th>
            </tr>
            <tr>
                <th scope="row"><%=brew.loc%></th>
            </tr>
            <tr>
                <th scope="row">Founder: <%=brew.founder%></th>
            </tr>
            <tr>
                <th scope="row"><a href="/brewery/edit/<%=brew._id%>" class="btn btn-primary"><i class="far fa-edit"></i></a></th>
            </tr>
            </tbody>
        </table>
    </div>
</div>
<br>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-auto">
            <H1>Beers</H1>
        </div>
    </div>
    <br>
    <div class="row justify-content-center">
        <div class="col-12">
            <table style="vertical-align: middle" class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th scope="col">Brewery</th>
                    <th scope="col">Name</th>
                    <th scope="col">Type</th>
                    <th scope="col">Alcohol</th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>
                <% beers.forEach(function(beer){ %>
                    <% if(beer._producer.toString() === brew._id.toString()){ %>
                        <tr>
                            <th scope="row"><a href="/brewery/show/<%=brew._id%>"><%=brew.name%></a></th>
                            <th scope="row"><%=beer.name%></th>
                            <th scope="row"><%=beer.type%></th>
                            <th scope="row"><%=beer.alc%>%</th>
                            <td style="width:30px;white-space: nowrap">
                                <a href="/beer/edit/<%=beer._id%>" class="btn btn-primary"><i class="far fa-edit"></i></a>
                                <a class="btn btn-danger"><i class="far fa-trash-alt"></i></a>
                            </th>
                        </tr>
                    <% }; %>
                <% }); %>
                </tbody>
            </table>
        </div>
    </div>
    <br>
    <div class="row justify-content-center">
        <div class="col-10 col-lg-5">
            <div class="d-grid">
                <a href="/beer/new" class="btn btn-primary">Add Beer</a>
            </div>
        </div>
    </div>
</div>
<%- include('footer') -%>